        <style>
            body {
                text-align: center;
                font-family: 'Tahoma', sans-serif;
                display: flex;
                justify-content: center;
                align-items: center;
                }

  

            .button {
                background-color: white;
                border: 1px solid black;
                font-family: 'Tahoma', sans-serif;
                border-radius: 8px;
                color: black;
                padding: 15px 32px;
                text-align: center;
                justify-content: center;
                align-items: center;
                text-decoration: none;
                display: inline-flex;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
            }
            .button:hover {
                background-color: grey; /* Green */
                color: white;
                border: 1px solid grey;
            }
            .button:focus {
                outline:none;
            }
            footer {
                position: fixed;
                bottom: 1rem;
                right: 1rem;
                color: rgba(0,0,0,0.5)
            }
            p {
                margin: 2%;
                font-size: 4em;
                font-weight: 400;
                width: 100%;
            }
            @media screen and (max-width: 767px) {
                p {
                    font-size: 2em;
                }
                input[type=text] {
                    font-size: 2.5rem;
					min-height: 3rem;
                }
            }
        </style>
    </head>
